{
    "tool": {
        "cursor": {
            "project": {
                "name": "quant_trading",
                "type": "python",
                "framework": [
                    "fastapi",
                    "nicegui"
                ],
                "database": {
                    "type": "sqlalchemy",
                    "name": "quant_trading",
                    "user": "postgres",
                    "password": "postgres"
                },
                "migration": "alembic",
                "package_manager": "poetry",
                "versions": {
                    "nicegui": ">=2.7.0",
                    "fastapi": ">=0.109.2"
                },
                "python": {
                    "version": "3.11",
                    "notice": "Do not use pip install"
                },
                "container": {
                    "enabled": true,
                    "name": "quant_trading_app",
                    "command_prefix": "docker compose exec app",
                    "commands": {
                        "run": "docker compose up -d",
                        "stop": "docker compose down",
                        "logs": "docker compose logs -f",
                        "shell": "docker compose exec app bash",
                        "migrate": "docker compose exec app alembic upgrade head",
                        "makemigrations": "docker compose exec app alembic revision --autogenerate -m"
                    }
                },
                "environment": {
                    "use_env_file": true,
                    "env_file": ".env",
                    "required_variables": [
                        "PROJECT_NAME",
                        "VERSION",
                        "API_V1_STR",
                        "SECRET_KEY",
                        "ALGORITHM",
                        "ACCESS_TOKEN_EXPIRE_MINUTES",
                        "ADMIN_USERNAME",
                        "ADMIN_PASSWORD",
                        "POSTGRES_HOST",
                        "POSTGRES_USER",
                        "POSTGRES_PASSWORD",
                        "POSTGRES_DB",
                        "DB_ECHO",
                        "APP_HOST",
                        "APP_PORT",
                        "BACKEND_CORS_ORIGINS"
                    ]
                }
            },
            "file_patterns": {
                "always_include": [
                    "alembic.ini",
                    "pyproject.toml",
                    "poetry.lock",
                    "requirements/dev.txt",
                    ".venv/**/*",
                    ".env",
                    "docker-compose.yml",
                    "Dockerfile"
                ],
                "exclude": [
                    "**/__pycache__/**",
                    "**/.git/**",
                    "**/.DS_Store",
                    "**/archive/**"
                ]
            },
            "code_structure": {
                "src": {
                    "api": {
                        "description": "FastAPI routers and endpoint definitions",
                        "patterns": [
                            "router.py",
                            "endpoints/*.py"
                        ]
                    },
                    "core": {
                        "description": "Core settings and common functionality",
                        "patterns": [
                            "config.py",
                            "security.py",
                            "constants.py"
                        ]
                    },
                    "db": {
                        "description": "Database related code",
                        "patterns": [
                            "base.py",
                            "base_class.py",
                            "session.py",
                            "init_db.py"
                        ]
                    },
                    "models": {
                        "description": "SQLAlchemy model definitions",
                        "patterns": [
                            "*.py"
                        ]
                    },
                    "schemas": {
                        "description": "Pydantic models and schema definitions",
                        "patterns": [
                            "*.py"
                        ]
                    },
                    "services": {
                        "description": "Business logic and service layer",
                        "patterns": [
                            "*.py"
                        ]
                    },
                    "utils": {
                        "description": "Utility functions and helpers",
                        "patterns": [
                            "*.py"
                        ]
                    },
                    "pages": {
                        "description": "NiceGUI page components",
                        "patterns": [
                            "*.py"
                        ]
                    }
                }
            },
            "code_style": {
                "python": {
                    "max_line_length": 100,
                    "docstring_style": "google",
                    "type_hints": true
                }
            },
            "best_practices": {
                "fastapi": {
                    "dependency_injection": true,
                    "async_support": true,
                    "openapi_docs": true,
                    "version_specific": {
                        ">=0.109.2": {
                            "use_pydantic_v2": true,
                            "use_typing_extensions": true,
                            "use_annotated_types": true,
                            "use_async_dependencies": true,
                            "use_modern_routing": true,
                            "use_modern_middleware": true,
                            "use_modern_exception_handlers": true
                        }
                    }
                },
                "nicegui": {
                    "component_based": true,
                    "state_management": true,
                    "responsive_design": true,
                    "version_specific": {
                        ">=1.4.21": {
                            "use_modern_components": true,
                            "use_quasar_components": true,
                            "use_modern_state_management": true,
                            "use_modern_routing": true,
                            "use_modern_events": true,
                            "use_modern_styling": true,
                            "use_modern_animations": true,
                            "use_modern_validation": true
                        }
                    }
                },
                "sqlalchemy": {
                    "async_engine": true,
                    "type_annotations": true
                }
            }
        }
    }
}